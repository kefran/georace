<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.utbm.georace.activity.CreateAccountActivity">

    <EditText
        android:hint="Identifiant"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:hint="Mot de passe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/userPassword1"
        android:layout_below="@+id/userLogin"
        android:layout_alignParentStart="true"
       />

    <EditText
        android:hint="Répeter le mot de passe"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/userPassword2"
        android:layout_below="@+id/userPassword1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10px"/>

    <EditText
        android:hint="Nom"
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userNom"
        android:layout_below="@+id/userPassword2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <EditText

        android:hint="Prénom"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userPrenom"
        android:layout_below="@+id/userNom"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:hint="Email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userEmail"
        android:layout_below="@+id/userPrenom"
        android:layout_alignParentStart="true"
        android:inputType="textEmailAddress"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/validerCreationUser"
        android:layout_below="@+id/userEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>




</RelativeLayout>
